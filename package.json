{
  "name": "notewiz",
  "version": "1.0.0",
  "description": "A note-taking app tailored for software engineers",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "npm run build"
  },
  "keywords": ["electron", "notes", "code", "developers"],
  "author": "NoteWiz Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.1",
    "@codemirror/lang-python": "^6.1.3",
    "@codemirror/lang-java": "^6.0.1",
    "@codemirror/lang-cpp": "^6.0.2",
    "@codemirror/lang-html": "^6.4.6",
    "@codemirror/lang-css": "^6.2.1",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.2.2",
    "@codemirror/state": "^6.3.1",
    "@codemirror/view": "^6.21.3",
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "codemirror": "^6.0.1",
    "marked": "^9.1.2",
    "highlight.js": "^11.9.0"
  },
  "build": {
    "appId": "com.notewiz.app",
    "productName": "NoteWiz",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ]
  }
} 